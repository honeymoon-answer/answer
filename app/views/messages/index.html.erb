<script type="text/x-template" id="js-index__messages__list__table-template">
  <table class="table">
    <thead>
      <tr>
        <th v-for="key in columns"
          @click="sortBy(key)"
          :class="{ active: sortKey == key }">
          {{ key | capitalize }}
          <span class="arrow" :class="sortOrders[key] > 0 ? 'asc' : 'dsc'">
          </span>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr v-for="entry in filteredData">
        <td v-for="key in columns">
          {{entry[key]}}
        </td>
      </tr>
    </tbody>
  </table>
</script>

<div class="row">
  <div class="col">
    <div id="js-index__messages__list__table">
      <form>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">Search</div>
            <input type="text" class="form-control" v-model="searchQuery">
          </div>
        </div>
      </form>
      <js-index__messages__list__table
        :data="gridData"
        :columns="gridColumns"
        :filter-key="searchQuery">
      </js-index__messages__list__table>
    </div>
  </div>
  <div class="col">
    <div class="col">
      <div id="js-index__messages__list__table">
        <js-index__messages__list__table
          :data="gridData"
          :columns="gridColumns"
          :filter-key="searchQuery">
        </js-index__messages__list__table>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "messages/index" %>
